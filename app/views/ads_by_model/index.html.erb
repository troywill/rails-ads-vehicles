<h1>Your saved vehicles, grouped by model</h1>
<% @models.each do |model| %>
<div class="model">
  <% if model.image_url %><img src="<%= model.image_url %>" style="float: left;padding-right:10px;margin-right:10px;padding-bottom:10px"><% end %>
    <h2><%= model.make.name %> <%= model.name %></h2>
    <ul style="margin-left";>
    <% @ads.each do |ad| %>
    <% if ( ad.model.id == model.id ) %>
        <li>
	  <%if ad.interesting %>
	  <%= image_tag "star.png" %>
	  <% end %>
	  <%= link_to "#{ad.year} #{number_to_human(ad.mileage, :precision => 2, :units => { :thousand => "k" }) }", ad.ad_url %>
	  - <span style="text-align: right; color:#A0522D;"><%= number_to_currency (((ad.ad_price/50.0)+0.5).to_i)*50, :precision => 0 %></span>
	  ( <%= render :partial => "citymap", :locals => { :ad => ad } %> )
	  <span><%= number_to_phone ad.contact_phone %></span>,
	  <%= render :partial => "new", :locals => { :ad => ad } %>
	  <%= link_to 'E', edit_ad_path(ad) %> <%= link_to "UP", "/ads/#{ad.id}/up" %> <%= link_to "DOWN", "/ads/#{ad.id}/thumbsdown" %>
	</li>
    <% end %>
  <% end %>
  </ul>
</div>
<hr style="clear:both" />
<% end %>

